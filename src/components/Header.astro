---
// src/components/Header.astro
import { getCollection } from 'astro:content';

// 1. Obtenemos las asignaturas para el menú desplegable
const asignaturas = await getCollection('asignaturas');
// Ordenamos alfabéticamente si quieres
asignaturas.sort((a, b) => a.data.titulo.localeCompare(b.data.titulo));
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <nav class="container mx-auto px-4 h-16 flex items-center justify-between">
    
    <a href="/" class="flex items-center gap-2 group">
      <div class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center text-white font-bold group-hover:bg-indigo-700 transition">
        A
      </div>
      <span class="text-xl font-bold text-gray-800 tracking-tight">Aula<span class="text-indigo-600">Dibujo</span></span>
    </a>

    <div class="hidden md:flex items-center gap-8">
      <a href="/" class="text-sm font-medium text-gray-600 hover:text-indigo-600 transition">Inicio</a>
      
      <div class="relative group py-4">
        <button class="flex items-center gap-1 text-sm font-medium text-gray-600 group-hover:text-indigo-600 transition">
          Asignaturas
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        
        <div class="absolute top-full left-1/2 -translate-x-1/2 w-64 bg-white shadow-xl rounded-xl border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0">
          <div class="p-2 grid gap-1">
            {asignaturas.map((asig) => (
              <a 
                href={`/asignaturas/${asig.slug}`} 
                class="block px-4 py-3 rounded-lg hover:bg-indigo-50 transition"
              >
                <p class="text-sm font-semibold text-gray-800">{asig.data.titulo}</p>
                <p class="text-xs text-gray-500">{asig.data.curso}</p>
              </a>
            ))}
          </div>
        </div>
      </div>

      <a href="/sobre-mi" class="text-sm font-medium text-gray-600 hover:text-indigo-600 transition">Sobre mí</a>
    </div>

    <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-600 hover:bg-gray-100 rounded-lg">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100 bg-gray-50">
    <div class="container mx-auto px-4 py-4 flex flex-col gap-2">
      <a href="/" class="block px-4 py-2 rounded-lg hover:bg-white font-medium text-gray-700">Inicio</a>
      
      <div class="px-4 py-2">
        <p class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Asignaturas</p>
        <div class="pl-2 border-l-2 border-gray-200 space-y-2">
          {asignaturas.map((asig) => (
            <a href={`/asignaturas/${asig.slug}`} class="block text-sm text-gray-600 hover:text-indigo-600">
              {asig.data.titulo}
            </a>
          ))}
        </div>
      </div>

      <a href="/sobre-mi" class="block px-4 py-2 rounded-lg hover:bg-white font-medium text-gray-700">Sobre mí</a>
    </div>
  </div>
</header>

<script>
  // Script simple para abrir/cerrar el menú móvil
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>