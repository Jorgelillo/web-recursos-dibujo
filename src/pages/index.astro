---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

// Obtenemos todas las asignaturas definidas
const asignaturas = await getCollection('asignaturas');
---

<Layout title="Recursos de Dibujo">
  <main class="container mx-auto p-4">
    <h1 class="text-4xl font-bold text-center mb-8">Aula de Dibujo</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {asignaturas.map((asignatura) => (
        <a href={`/asignaturas/${asignatura.slug}`} class="block p-6 border rounded-lg hover:shadow-lg transition bg-white">
          <h2 class="text-2xl font-bold text-blue-600">{asignatura.data.titulo}</h2>
          <p class="text-gray-500">{asignatura.data.curso}</p>
          <p class="mt-2">{asignatura.data.descripcion}</p>
        </a>
      ))}
    </div>
  </main>
</Layout>
