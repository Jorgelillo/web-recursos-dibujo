import '../styles/global.css';  // <--- Â¡AÃ‘ADE ESTA LÃNEA AQUÃ!
import Header from '../components/Header.astro'; // <--- IMPORTANTE

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { 
	title, 
	// Ponemos un texto por defecto por si alguna pÃ¡gina no tiene descripciÃ³n
	description = "Repositorio de recursos y lÃ¡minas para EducaciÃ³n PlÃ¡stica, Visual y Audiovisual.", 
	// Ponemos una imagen por defecto (asegÃºrate de tener una foto genÃ©rica en tu carpeta public)
	image = "/portada-default.jpg" 
} = Astro.props;

// Esto genera la URL completa (ej. https://tuweb.com/recursos/lamina-1)
const canonicalURL = new URL(Astro.url.pathname, Astro.site || Astro.url);
// Esto asegura que la ruta de la imagen sea absoluta (obligatorio para WhatsApp/Classroom)
const socialImageURL = new URL(image, Astro.url);
---

<!doctype html>
<html lang="es">
